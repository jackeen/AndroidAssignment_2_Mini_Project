<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TournamentActivities.TournamentAnswerActivity">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Tournament Answer"
        android:navigationIcon="@drawable/baseline_arrow_back_24"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@color/bg_dark"
        >

        <TextView
            android:id="@+id/tournament_name_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            style="@style/TextAppearance.Material3.TitleLarge"
            />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tournament_score_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            style="@style/TextAppearance.Material3.TitleLarge"
            />
    </LinearLayout>


    <app.fatal.androidassignment_2_mini_project.adapters.NoScrollRecyclerView
        android:id="@+id/question_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_grey"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/answer_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:drawableLeft="@drawable/baseline_keyboard_arrow_down_24"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/answer_show_score_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Show Score"
            />

        <Button
            android:id="@+id/answer_previous_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Previous"
            android:drawableRight="@drawable/baseline_keyboard_arrow_up_24"
            />
    </LinearLayout>



</LinearLayout>